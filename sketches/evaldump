use NXCL::Package;
use NXCL::Reader;
use NXCL::Expander;
use NXCL::Weaver;
use NXCL::JSON;
use NXCL::YDump;
use NXCL::Environment;

my $r = NXCL::Reader->new;

my $e = NXCL::Expander->new;

my $w = NXCL::Weaver->new;

my $env = NXCL::Environment->new;

my ($struct) = $env->eval(
  $w->weave(
    $e->expand(
      $r->parse(script => $ARGV[0]//die "No argument given")
    )
  )
);

print ydump(nxcl2json($struct));
